{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "g++ -DDEBUG -Wall -g .\\src\\main.cpp -o .\\out\\main.exe",
      "args": [
        // "-std=c++17",
      ]
    },
    {
      "label": "run",
      "type": "shell",
      "command": "Get-Content .\\out\\input.txt | .\\out\\main.exe",
      "dependsOn": [
        "build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "run last build",
      "type": "shell",
      "command": ".\\out\\main.exe",
      "problemMatcher": []
    },
    {
      "label": "run then store output to file",
      "type": "shell",
      "command": ".\\out\\main.exe > .\\out\\output.txt",
      "problemMatcher": []
    },
    {
      "label": "run and input then store output to file",
      "type": "shell",
      "command": "Get-Content .\\out\\input.txt | .\\out\\main.exe > .\\out\\output.txt",
      "problemMatcher": []
    },
  ]
}