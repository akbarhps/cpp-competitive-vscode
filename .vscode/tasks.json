{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": [
        // "-std=c++17",
        ".\\src\\main.cpp",
        "-o",
        ".\\out\\main.exe"
      ]
    },
    {
      "label": "run",
      "type": "shell",
      "command": ".\\out\\main.exe",
      "dependsOn": [
